#!/usr/bin/env bash
# backup and compress my databases

# Check if the password argument is provided
if [ $# -ne 1 ]; then
    echo "Usage: $0 <password>"
    exit 1
fi

# Get the current date for the archive name
current_date=$(date +"%d-%m-%Y")

# MySQL dump file name
dump_file="backup.sql"

# Compressed archive name
archive_name="$current_date.tar.gz"

# MySQL dump command
mysqldump --all-databases -u root --password="$1" > "$dump_file"

# Check if the dump was successful
if [ $? -ne 0 ]; then
    echo "MySQL dump failed"
    exit 1
fi

# Compress the dump file into a tar.gz archive
tar -czvf "$archive_name" "$dump_file"

# Check if the compression was successful
if [ $? -ne 0 ]; then
    echo "Compression failed"
    exit 1
fi
